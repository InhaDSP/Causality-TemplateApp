<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASDryRunnerJ" parent="Base.Theme.MaterialThemeBuilder">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/primaryLightColor</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnBackground">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorOnError">@color/primaryTextColor</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ASDryRunner.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ASDryRunner.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ASDryRunner.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ASDryRunner.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ASDryRunner.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ASDryRunner.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ASDryRunner.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.ASDryRunner.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ASDryRunner.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ASDryRunner.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.ASDryRunner.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ASDryRunner.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ASDryRunner.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ASDryRunner.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ASDryRunner.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ASDryRunner.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.ASDryRunner.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.ASDryRunner.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Theme.ASDryRunnerJ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ASDryRunnerJ.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ASDryRunnerJ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ASDryRunnerJ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>
</resources>